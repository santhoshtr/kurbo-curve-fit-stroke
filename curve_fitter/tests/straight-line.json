{
  "name": "straight-line",
  "description": "Simple diagonal line stroke from (0,0) to (100,100) - test simple skeleton preservation",
  "test_type": "fit_and_stroke",
  "input": {
    "points": [
      {"x": 0.0, "y": 0.0, "point_type": "Smooth"},
      {"x": 100.0, "y": 100.0, "point_type": "Smooth"}
    ],
    "is_closed": false
  },
  "stroke": {
    "widths": [5.0, 5.0],
    "tolerance": 0.1
  },
  "operations": ["fit_curve", "stroke", "refit_stroke", "register_skeleton", "refit_with_skeleton"],
  "outputs": {
    "fitted_curve": "straight-line-fitted",
    "stroke_outline": "straight-line-stroke",
    "refitted_stroke": "straight-line-refitted",
    "skeleton_preserved": "straight-line-skeleton"
  }
}
