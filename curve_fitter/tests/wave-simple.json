{
  "name": "wave-simple",
  "description": "Simple 4-point wave curve with variable-width stroke and selective skeleton correction",
  "test_type": "fit_and_stroke",
  "input": {
    "points": [
      {
        "x": 50.0,
        "y": 100.0,
        "point_type": "Smooth"
      },
      {
        "x": 150.0,
        "y": 50.0,
        "point_type": "Smooth"
      },
      {
        "x": 250.0,
        "y": 150.0,
        "point_type": "Smooth"
      },
      {
        "x": 350.0,
        "y": 100.0,
        "point_type": "Smooth"
      }
    ],
    "is_closed": false
  },
  "stroke": {
    "widths": [
      10.0,
      15.0,
      50.0,
      25.0
    ],
    "tolerance": 0.1
  },
  "operations": [
    "fit_curve",
    "stroke",
    "refit_stroke",
    "register_skeleton",
    "refit_stroke_with_skeleton"
  ],
  "outputs": {
    "fitted_curve": "wave-simple-fitted",
    "stroke_outline": "wave-simple-stroke",
    "refitted_stroke": "wave-simple-refitted",
    "skeleton_corrected": "wave-simple-skeleton-correction"
  }
}
